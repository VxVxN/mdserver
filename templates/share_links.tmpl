<!doctype html>
<html>
    <header>
        {{ template "header.tmpl" .}}
        <link href="/static/highlight/styles/ir_black.css" rel="stylesheet" media="screen">
    </header>

    <body class="vh-100">
        <script src="/static/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <div class="d-flex flex-column" style="height: 100vh">
            {{ template "auth_navbar.tmpl" .}}
            <div class="container" id="container">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Directory</th>
                            <th scope="col">File</th>
                            <th scope="col">Link</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{ range .ShareLinks }}
                            <tr>
                                <td>{{ .Directory }}</td>
                                <td>{{ .File }}</td>
                                <td> <a href="{{ .Link }}">{{ .Link }}</a></td>
                                <td>
                                    <a type="button" name="deleteModal" class="btn btn-outline-danger" data-link="{{ .Link }}" title="delete">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16" data-link="{{ .Link }}">
                                            <path data-link="{{ .Link }}" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"></path>
                                        </svg>
                                        <span class="visually-hidden">Button</span>
                                    </a>
                                </td>
                            </tr>
                        {{ end }}
                        <!-- delete modal -->
                        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModal" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalTitle">Delete the link</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form>
                                            <div class="mb-3">
                                                <p class="col-form-label" id="deleteModalLabel">Are you sure you want to delete the link?</p>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="deleteModalBtn">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end delete modal -->
                    </tbody>
                </table>
            </div>
        </div>
        </div>>

        <script src="/static/js/share_links.js"></script>
        <script src="/static/js/navbar.js"></script>
        <script src="/static/js/tools.js"></script>
        <script src="/static/highlight/highlight.pack.js"></script>
        <script>hljs.initHighlightingOnLoad();</script>
    </body>
</html>