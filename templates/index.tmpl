<!doctype html>
<html>
   <header>
      {{ template "header.tmpl" .}}
      <link href="/static/highlight/styles/ir_black.css" rel="stylesheet" media="screen">
   </header>

   <body class="vh-100">
      <script src="/static/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
      <div class="d-flex flex-column" style="height: 100vh">
          {{if .IsAuth}}
            {{ template "auth_navbar.tmpl" .}}
          {{else}}
            {{ template "navbar.tmpl" .}}
          {{end}}
          <div class="container flex-grow-1" id="container">
            <div class="row" style="text-align:left;">
                <div class="col-md-8 col-md-offset-2 d-flex flex-column w-100">
                    <h1>{{.Title}}</h1>
                    {{if .IsAuth}}
                        <button type="button" class="btn btn-outline-dark align-self-start" href="#" data-bs-toggle="modal" data-bs-target="#createDirectoryModal">Create directory</button>
                        {{ range .Directories }}
                            {{ $DirName := .DirName }}
                            <div class="d-inline-block">
                                <h3 class="align-self-start d-inline-block me-2 my-3">{{ .DirName }}</h3>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a type="button" name="renameModal" class="btn btn-outline-secondary" data-type="directory" data-name="{{ .DirName }}" title="rename">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16" data-type="directory" data-name="{{ .DirName }}">
                                            <path data-type="directory" data-name="{{ .DirName }}" d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
                                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"></path>
                                        </svg>
                                        <span class="visually-hidden">Button</span>
                                    </a>
                                    <a type="button" name="deleteModal" class="btn btn-outline-danger d-inline-block" data-type="directory" data-name="{{ .DirName }}" title="delete">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16" data-type="directory" data-name="{{ .DirName }}">
                                            <path data-type="directory" data-name="{{ .DirName }}" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"></path>
                                        </svg>
                                        <span class="visually-hidden">Button</span>
                                    </a>
                                </div>
                            </div>
                            <button type="button" name="createPost" class="btn btn-outline-dark align-self-start mb-3" href="#" data-bs-toggle="modal" data-bs-target="#createPostModal" data-dirname="{{ .DirName }}">Create file</button>
                            <div>
                                {{ range .Files }}
                                    <div class="mb-2 d-flex">
                                        <a type="button" class="btn flex-grow-1 btn-outline-dark me-1" href="{{ .LinkToPost }}">{{ .Name }}</a>
                                        <div class="btn-group" role="group" aria-label="Basic example">
                                            <a type="button" class="btn btn-outline-secondary" href="/edit/{{ .LinkToPost }}" title="edit">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"></path>
                                                </svg>
                                                <span class="visually-hidden">Button</span>
                                            </a>
                                            <a type="button" name="renameModal" class="btn btn-outline-secondary" data-type="file" data-name="{{ .Name }}" data-dirname="{{ $DirName }}" title="rename">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16" data-type="file" data-name="{{ .Name }}" data-dirname="{{ $DirName }}">
                                                    <path data-type="file" data-name="{{ .Name }}" data-dirname="{{ $DirName }}" d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
                                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"></path>
                                                </svg>
                                                <span class="visually-hidden">Button</span>
                                            </a>
                                            <a type="button" name="deleteModal" class="btn btn-outline-danger" data-type="file" data-name="{{ .Name }}" data-dirname="{{ $DirName }}" title="delete">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16" data-type="file" data-name="{{ .Name }}" data-dirname="{{ $DirName }}">
                                                    <path data-type="file" data-name="{{ .Name }}" data-dirname="{{ $DirName }}" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"></path>
                                                </svg>
                                                <span class="visually-hidden">Button</span>
                                            </a>
                                        </div>
                                    </div>
                                {{ end }}
                            </div>
                        {{ end }}
                    {{ end }}
                    <!-- sign in modal -->
                    <div class="modal fade" id="signInModal" tabindex="-1" aria-labelledby="signInModal" aria-hidden="true">
                    <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Sign in</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form>
                               <div class="mb-3 has-validation">
                                   <label for="username" class="col-form-label">Username:</label>
                                   <input type="text" class="form-control" id="username">
                                  <label for="password" class="col-form-label">Password:</label>
                                  <input type="password" class="form-control" id="password">
                                  <div class="invalid-feedback" id="errorDiv"></div>
                               </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="cancelSignIn">Cancel</button>
                            <button type="button" class="btn btn-primary" id="signInBtn">Sign in</button>
                        </div>
                      </div>
                   </div>
                </div>
                <!-- end sign in modal -->
                <!-- create directory modal -->
                <div class="modal fade" id="createDirectoryModal" tabindex="-1" aria-labelledby="createDirectoryModal" aria-hidden="true">
                   <div class="modal-dialog">
                      <div class="modal-content">
                         <div class="modal-header">
                            <h5 class="modal-title">Create directory</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                         </div>
                         <div class="modal-body">
                            <form>
                               <div class="mb-3">
                                  <label for="directoryName" class="col-form-label">Name:</label>
                                  <input type="text" class="form-control" id="directoryName">
                               </div>
                            </form>
                         </div>
                         <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="cancelSaveDirectory">Cancel</button>
                            <button type="button" class="btn btn-primary" id="createDirectory">Create</button>
                         </div>
                      </div>
                   </div>
                </div>
                <!-- end create directory modal -->
                <!-- delete modal -->
                <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModal" aria-hidden="true">
                   <div class="modal-dialog">
                      <div class="modal-content">
                         <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalTitle"></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                         </div>
                         <div class="modal-body">
                            <form>
                               <div class="mb-3">
                                  <p class="col-form-label" id="deleteModalLabel"></p>
                               </div>
                            </form>
                         </div>
                         <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="deleteModalBtn">Delete</button>
                         </div>
                      </div>
                   </div>
                </div>
                <!-- end delete modal -->
                <!-- create post modal -->
                <div class="modal fade" id="createPostModal" tabindex="-1" aria-labelledby="createPostModal" aria-hidden="true">
                   <div class="modal-dialog">
                      <div class="modal-content">
                         <div class="modal-header">
                            <h5 class="modal-title">Create file</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                         </div>
                         <div class="modal-body">
                            <form>
                               <div class="mb-3">
                                  <label for="createPostName" class="col-form-label">Name:</label>
                                  <input type="text" class="form-control" id="createPostName">
                               </div>
                            </form>
                         </div>
                         <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="cancelPostModalBtn">Cancel</button>
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="createPostModalBtn">Create</button>
                         </div>
                      </div>
                   </div>
                </div>
                <!-- end create post modal -->
                <!-- rename modal -->
                <div class="modal fade" id="renameModal" tabindex="-1" aria-labelledby="renameModal" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="renameModalTitle"></h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="mb-3">
                                        <label for="renameModalName" class="col-form-label" id="renameModalLabel"></label>
                                        <input type="text" class="form-control" id="renameModalName">
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="cancelRenameModalBtn">Cancel</button>
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="renameModalBtn">Rename</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end rename modal -->
             </div>
          </div>
       </div>
       <script src="/static/highlight/highlight.pack.js"></script>
       <script src="/static/js/navbar.js"></script>
       <script src="/static/js/index.js"></script>
       <script src="/static/js/tools.js"></script>
       <script>hljs.initHighlightingOnLoad();</script>
   </body>
</html>
